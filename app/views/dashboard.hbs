<nav class="navbar bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand text-white">Bambank</a>
    <form class="d-flex" role="search">
	  <a class="btn btn-outline-success" href="/logout"> Logout </a>
    </form>
  </div>
</nav>
<div class="container align-items-center">
	<h1 class="text-center display-1 mb-4">Welcome to Bambank</h1>
    <h5>Hi, {{displayName}}!</h5>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col">
      	<div class="card">
			<div class="card-header">
				Balance
			</div>
			<div class="card-body">
				<h5 class="card-title"> {{balance}} </h5>
				<p class="card-text">Bambeuros</p>
			</div>
		</div>
    </div>
    <div class="col order-5">
		<div class="card">
			<div class="card-header">
				Transfer
			</div>
			<div class="card-body">
				 <form  method="post">
					<div class="form-group">
						<label for="email">Recipient email address</label>
						<input type="email" class="form-control" name="email" required>
					</div>
					<div class="form-group">
						<label for="amount">Amount to Transfer</label>
						<input type="number" class="form-control" name="amount" required>
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
    </div>
    <div class="col order-1">
		<div class="card">
			<div class="card-header">
				Transactions
			</div>
			<div class="card-body">
				<div class="col-md-3">
					<table class="table">
						<thead>
							<tr>
							<th scope="col">#</th>
							<th scope="col">Amount</th>
							<th scope="col">Date</th>
							</tr>
						</thead>
						<tbody>
							{{#each transactions}}
								<tr>
								<th scope="row">{{this.id}}</th>
								<td>{{this.amount}}</td>
								<td>{{this.formatted_date}}</td>
								</tr>
							{{/each}}
						</tbody>
					</table>
                </div>
			</div>
		</div>
    </div>
  </div>
</div>